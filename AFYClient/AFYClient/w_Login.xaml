<Window x:Class="AFYClient.w_Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AFYClient"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="240" Margin="205,100,0,0" VerticalAlignment="Top" Width="348">
            <Label x:Name="lblUserName" Content="Benutzername"/>
            <TextBox x:Name="txtUsername" Height="34" TextWrapping="Wrap"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="48" Width="348"/>
            <Label x:Name="lblPassword" Content="Passwort"/>
            <TextBox x:Name="txtPassword" Height="28" TextWrapping="Wrap"/>
            <Border BorderBrush="Black" BorderThickness="1" Height="28"/>
            <Button x:Name="btn" Content="Button" Height="39"/>
        </StackPanel>

    </Grid>
</Window>
